---
import Link, { type Props as LinkProps } from './Link.astro'
import Icon, { type Props as IconProps } from '@/shared/icon/Icon.astro'
import Paragraph, {
  type Props as ParagraphProps,
} from '@/shared/typography/Paragraph.astro'

export interface Props {
  icon: IconProps
  link: LinkProps
  paragraph?: ParagraphProps
}

const { icon, link, paragraph } = Astro.props

if (paragraph) {
  paragraph.style = {
    ...paragraph.style,
    lineHeight: '0.8rem',
  }
}

---

<Link {...link}>
  <Icon {...icon} />
  {paragraph && <Paragraph {...paragraph} />}
</Link>

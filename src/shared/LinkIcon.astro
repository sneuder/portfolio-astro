---
import Link, { type Props as LinkProps } from './Link.astro'
import Icon, { type Props as IconProps } from './Icon.astro'
import Paragraph, {
  type Props as ParagraphProps,
} from './typography/Paragraph.astro'

export interface Props {
  icon: IconProps
  link: LinkProps
  paragraph: ParagraphProps
}

const { icon, link, paragraph } = Astro.props
---

<Link {...link}>
  <Icon {...icon} />
  <Paragraph {...paragraph} />
</Link>

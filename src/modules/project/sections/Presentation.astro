---
import { Image } from 'astro:assets'
import { TypographyType } from '@/shared/typography/schema'
import Heroe, { type Props as HeroeProps } from '@/shared/layouts/Heroe.astro'
import { getImageBrandFromLocal } from '@/services/dataGetter'

const heroeProps: HeroeProps = {
  header: {
    title: 'Highlighting Innovation: Projects that Define My Career',
    type: TypographyType.PRIMARY,
    style: {
      lineHeight: '4rem',
    }
  },
  paragraph: {
    title:
      'Delve into the projects that have been pivotal in shaping my professional trajectory. From groundbreaking applications in Node.js to impactful contributions as a Go Developer Advocate, each project showcases my commitment to pushing boundaries and delivering excellence in software development. Explore how these endeavors have not only demonstrated technical expertise but also fostered innovation within the dynamic tech industry landscape.',
    type: TypographyType.PRIMARY,
    style: {
      textAlign: 'justify',
    },
  },
}

const srcImage = await getImageBrandFromLocal('banner-projects')

---

<Heroe {...heroeProps}>
  <Image slot={"AFTER"} src={srcImage} alt={"banner-projects"} width={854} height={480} style={{
    width: '100%',
    height: '80px',
    objectFit: 'cover',
    borderRadius: '0.5rem',
  }}/>
</Heroe>

---
import Avatar, {
  AvatarShape,
  type Props as AvatarProps,
} from '@/shared/Avatar.astro'
import { TypographyType } from '@/shared/typography/schema'

import Heroe, {
  type Props as HeroeProps,
  SLOTS,
} from '@/shared/layouts/Heroe.astro'
import { getDocFromLocal, getImageBrandFromLocal } from '@/services/dataGetter'

import LinkIcon, {
  type Props as LinkIconProps,
} from '@/shared/link/LinkIcon.astro'
import { ProjectLinkIconMapper } from '@/data/projects'

const heroeProps: HeroeProps = {
  header: {
    title:
      'Node.js Expert, Go Developer Advocate, Creator, and Lifelong Innovator',
    type: TypographyType.PRIMARY,
  },
  paragraph: {
    title:
      "ü§òüèª Hello! My name is Esneider Ospina, Node.js Expert, Go Developer Advocate, and Lifelong Innovator based in Colombia. I created this website as a place to document my journey as I learn new things and share them with you. While I haven‚Äôt published any blog posts yet, stay tuned because they're coming soon! I have a passion for learning and creating new ways to solve problems. When I'm not coding, I enjoy playing sports like handball and volleyball. I hope that my future content will help you solve a problem or learn something new.",
    type: TypographyType.PRIMARY,
    style: {
      textAlign: 'justify',
    },
  },
}

const avatarProps: AvatarProps = {
  src: await getImageBrandFromLocal('sneuder'),
  alt: 'Sneuder',
  size: 84,
  format: {
    shape: AvatarShape.SQUARE,
  },
}

const linkIconResumeProps: LinkIconProps = {
  icon: {
    name: ProjectLinkIconMapper.WEB,
  },
  link: {
    href: await getDocFromLocal('Esneider_Ospina'),
    newTab: true,
  },
  paragraph: {
    title: 'Resume',
    type: TypographyType.SECONDARY,
  },
}
---

<Heroe {...heroeProps}>
  <Avatar {...avatarProps} slot={SLOTS.BEFORE} />
  <div slot={SLOTS.AFTER}>
    <LinkIcon {...linkIconResumeProps} />
  </div>
</Heroe>
